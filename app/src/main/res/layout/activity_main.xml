<com.jacob.qq.CustomHorizontalScrollView
    android:id="@+id/custom_scroll_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:background="@mipmap/img_frame_background"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:drawableLeft="@mipmap/img_1"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="菜单1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:drawableLeft="@mipmap/img_2"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="菜单2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:drawableLeft="@mipmap/img_3"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="菜单3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:drawableLeft="@mipmap/img_4"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="菜单4"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:drawableLeft="@mipmap/img_5"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="菜单5"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@mipmap/bg">

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click Me"/>

        </LinearLayout>
    </LinearLayout>

</com.jacob.qq.CustomHorizontalScrollView>
